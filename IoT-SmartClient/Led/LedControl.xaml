<UserControl x:Class="IoT_SmartClient.LedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IoT_SmartClient"
             mc:Ignorable="d" Height="20" Width="130">
    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
        <Button Content="On" Margin="0,0,10,0" Width="40" Click="ButtonLedOnClick"/>
        <Button Content="Off" Margin="0,0,10,0" Width="40" Click="ButtonLedOffClick"/>
        <local:LedView x:Name="ledView" Height="20" Width="20" Color="#FFA29C1B"/>
    </StackPanel>
</UserControl>
